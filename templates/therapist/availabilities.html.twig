{% extends "account_layout.html.twig" %}

{% set form = appointment_form %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Disponibilités</h1>
    </div>
    <div class="container-fluid" style="margin-top: 80px;">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6">
                <fieldset class="form-group">
                    {{ form_widget(form.bookingDate, {'attr': {'class': 'form-control'}}) }}
                </fieldset>
            </div>
            <div class="col-md-3 col-sm-6">
                <fieldset class="form-group">
                    {{ form_widget(form.bookingStart, {'attr': {'class': 'booking_start_picker'}}) }}
                </fieldset>
            </div>
            <div class="col-md-3 col-sm-6">
                <fieldset class="form-group">
                    {{ form_widget(form.bookingEnd, {'attr': {'class': 'booking_end_picker'}}) }}
                </fieldset>
            </div>
            <div class="col-md-2 col-sm-6">
                <fieldset class="form-group">
                    {{ form_widget(form.location, {'attr': {'value': app.user.zipCode, 'class': 'booking_location' }}) }}
                </fieldset>
            </div>
            <div class="col-md-1 col-sm-6">
                <fieldset class="form-group">
                    <button class="btn btn-primary" type="submit">+</button>
                </fieldset>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Lieu</th>
                <th>Réservé</th>
                <th>Annulé</th>
                <th></th>
            </tr>
            </thead>
            {% if availabilities|length %}
                <tbody>
                {% for a in availabilities %}
                    <tr>
                        <td>{{ a.id }}</td>
                        <td>{{ a.bookingDate|date('d/m/Y') }}</td>
                        <td>{{ a.bookingStart|date('H:i') }}</td>
                        <td>{{ a.bookingEnd|date('H:i') }}</td>
                        <td>{{ a.location }}</td>
                        <td>
                            {% if a.booked == true %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td>
                            {% if a.cancelled == true %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('therapist_availability_edit', {'id': a.id}) }}" class="btn btn-outline-primary">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('therapist_availability_delete', {'id': a.id}) }}" class="btn btn-outline-danger">
                                <i class="fa fa-times"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            {% else %}
                <p>Enregistrez vos disponibilités dès maintenant !</p>
            {% endif %}
        </table>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}