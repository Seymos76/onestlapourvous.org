{% extends "account_layout.html.twig" %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Historique</h1>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Lieu</th>
                <th>Réservé</th>
                <th>Annulé</th>
            </tr>
            </thead>
            {% if history|length %}
                <tbody>
                {% for a in history %}
                    <tr>
                        <td>{{ a.id }}</td>
                        <td>{{ a.bookingDate|date('d/m/Y') }}</td>
                        <td>{{ a.bookingStart|date('H:i') }}</td>
                        <td>{{ a.bookingEnd|date('H:i') }}</td>
                        <td>{{ a.location }}</td>
                        <td>
                            {% if a.booked == true %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td>
                            {% if a.cancelled == true %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            {% else %}
                <p>Votre historique est vide pour l'instant !</p>
            {% endif %}
        </table>
    </div>
{% endblock %}