{% extends "account_layout.html.twig" %}

{% block stylesheets %}
{% endblock %}

{% block heading %}
    <div class="page-title-icon">
        <i class="pe-7s-clock icon-gradient bg-mean-fruit">
        </i>
    </div>
    <div>
        Mes rendez-vous
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="table table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Début</th>
                    <th>Fin</th>
                    <th>Thérapeute</th>
                    <th>Statut</th>
                    <th></th>
                </tr>
                </thead>
                {% if appoints|length %}
                    <tbody>
                    {% for a in appoints %}
                        <tr>
                            <td>{{ a.id }}</td>
                            <td>{{ a.bookingDate|date('d/m/Y') }}</td>
                            <td>{{ a.bookingStart|date('H:i') }}</td>
                            <td>{{ a.bookingEnd|date('H:i') }}</td>
                            <td>{{ a.therapist.email }}</td>
                            <td>
                                {{ constant('App\\Entity\\Appointment::STATUS')[a.status] }}
                            </td>
                            <td>
                                {% if date(a.bookingDate) > date('+24hours') %}
                                    <a href="{{ path('patient_appointment_cancel', {'id': a.id}) }}" class="btn btn-outline-primary">
                                        Annuler
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                {% else %}
                    <p>Vous n'avez pas encore de rendez-vous !</p>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}