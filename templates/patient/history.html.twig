{% extends "account_layout.html.twig" %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Historique</h1>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>#</th>
                <th>Action</th>
                <th>Date action</th>
                <th>Date</th>
                <th>Début</th>
                <th>Thérapeute</th>
                <th>Statut</th>
                <th>Dispo</th>
            </tr>
            </thead>
            {% if history|length %}
                <tbody>
                {% for a in history %}
                    <tr>
                        <td>{{ a.id }}</td>
                        <td>{{ a.action }}</td>
                        <td>{{ a.actionedAt|date('d/m/Y H:i') }}</td>
                        <td>{{ a.bookingDate|date('d/m/Y') }}</td>
                        <td>{{ a.bookingStart|date('H:i') }}</td>
                        <td>{{ a.therapist.firstName }} {{ a.therapist.lastName }}</td>
                        <td>
                            {% if a.booked == true %}
                                Réservé
                            {% else %}
                                Annulé
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('patient_research_by_therapist', {'id': a.therapist.id}) }}" class="btn btn-primary">Disponibilités</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            {% else %}
                <p>Votre historique est vide pour l'instant !</p>
            {% endif %}
        </table>
    </div>
{% endblock %}