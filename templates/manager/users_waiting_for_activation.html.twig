{% extends "account_layout.html.twig" %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Utilisateurs en attente de validation</h1>
    </div>
    <div class="container-fluid">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th>Date inscription</th>
                    <th>Role</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Validé</th>
                    <th>Pays</th>
                    <th>Département</th>
                    <th></th>
                </tr>
                </thead>
                {% if waiting_users|length %}
                    <tbody>
                    {% for u in waiting_users %}
                        <tr>
                            <td>{{ u.id }}</td>
                            <td>{{ u.email }}</td>
                            <td>{{ u.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {{ u.roles|last }}
                            </td>
                            <td>{{ u.lastName }}</td>
                            <td>{{ u.firstName }}</td>
                            <td>{{ u.isActive }}</td>
                            <td>
                                {% if u.country is defined %}
                                    {{ constant('App\\Entity\\Department::COUNTRIES')[u.country] }}
                                {% endif %}
                            </td>
                            <td>
                                {% if u.department is defined %}
                                    {{ u.department.name }}
                                {% endif %}
                            </td>
                            <td>
                                {% if u.isActive == false %}
                                    <a href="{{ path('manager_resend_email_confirmation', {'id': u.id}) }}" class="btn btn-primary">
                                        Renvoyer l'email de confirmation
                                    </a>
                                {% endif %}
                                {% if u.isActive == false %}
                                    <a href="{{ path('manager_activate_user', {'id': u.id}) }}" class="btn btn-primary">
                                        Activer
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                {% else %}
                    <p>Tous les utilisateurs sont activés.</p>
                {% endif %}
            </table>
            {{ knp_pagination_render(waiting_users) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}