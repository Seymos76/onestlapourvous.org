{% extends "account_layout.html.twig" %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Nouveaux utilisateurs</h1>
    </div>
    <form action="{{ path('manager_new_users') }}" method="post" class="mt-3 mb-3">
        <fieldset>
            <label for="date_from">Date départ</label>
            <input type="date" name="date_from" id="date_from">
        </fieldset>
        <fieldset>
            <label for="date_to">Date limite</label>
            <input type="date" name="date_to" id="date_to">
        </fieldset>
        <button class="btn btn-primary">Valider</button>
    </form>
    <div class="container-fluid">
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Email</th>
                    <th>Date inscription</th>
                    <th>Role</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Validé</th>
                    <th></th>
                </tr>
                </thead>
                {% if new_users|length %}
                    <tbody>
                    {% for u in new_users %}
                        <tr>
                            <td>{{ u.id }}</td>
                            <td>{{ u.email }}</td>
                            <td>{{ u.createdAt|date('d/m/Y') }}</td>
                            <td>
                                {{ u.roles|last }}
                            </td>
                            <td>{{ u.lastName }}</td>
                            <td>{{ u.firstName }}</td>
                            <td>{{ u.isActive }}</td>
                            <td>
                                {% if u.isActive == false %}
                                    <a href="{{ path('manager_resend_email_confirmation', {'id': u.id}) }}" class="btn btn-primary">
                                        Renvoyer l'email de confirmation
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                {% else %}
                    <p>Pas de nouvelles inscriptions cette période</p>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}