{% extends 'public_layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row text-center d-flex flex-column justify-content-center align-content-center">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <h4 class="text-gray mt-0 pt-5">J'ai oublié mon mot de passe</h4>
                    <hr>
                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                        </div>
                    {% endif %}
                    {{ form_start(form, {'attr': {'class': 'clearfix'}}) }}
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': "Adresse email"}}) }}
                    <div class="clear text-center pt-10">
                        <button type="submit" class="btn btn-theme-colored btn-lg btn-block no-border mt-15 mb-15">Réinitialiser mon mot de passe</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
